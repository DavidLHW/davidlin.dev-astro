---
import locale from "@/locale";
import config from "@/config";

const headLineHtmlStringDark = locale.en.landing.INTRO.TITLE.replace(
  "{{ author }}",
  `<span
      class="bg-clip-text text-transparent
              bg-gradient-to-br dark:from-[#67e8f9]
              dark:via-[#22d3ee] dark:to-[#06b6d4]"
    >${config.AUTHOR_NAME.split(" ")[0]}</span>.`
);

const headLineHtmlStringLight = locale.en.landing.INTRO.TITLE.replace(
  "{{ author }}",
  `<span
      class="bg-gradient-to-bl bg-no-repeat
              bg-bottom bg-[length:90%_40%]
            from-[#fde68a] to-[#fde68a]"
    >${config.AUTHOR_NAME.split(" ")[0]}</span>.`
);

const ctaHtmlString = locale.en.landing.INTRO.CTA.replace(
  "{{ linkedin }}",
  `<a href="${config.CTA.LINKEDIN}" target="_blank">linkedin</a>`
);
---

<section class="pt-4 pb-4">
  <div
    class="flex flex-col-reverse xsm:flex-row sm:grid sm:grid-cols-[2fr_180px] items-start pt-4"
  >
    <div class="flex flex-col pr-8">
      <h1
        class="font-extrabold text-[2em] md:text-[2.5em] pb-4 text-black leading-[1.25]"
      >
        <span
          class="hidden dark:inline text-text-heading"
          set:html={headLineHtmlStringDark}
        />
        <span
          class="dark:hidden inline text-text-heading"
          set:html={headLineHtmlStringLight}
        />
      </h1>

      <p class="pb-4">
        {locale.en.landing.INTRO.DESCRIPTION}
      </p>
      {ctaHtmlString && <p class="mb-5" set:html={ctaHtmlString} />}
    </div>

    <div
      class="w-[90px] flex sm:justify-end sm:w-full relative mb-8 sm:mb-0 mr-auto"
    >
      <img
        class="rounded-full bg-primary-main/25"
        src={config.PROFILE_IMAGE_REL_PATH}
        alt={config.AUTHOR_NAME}
        title={config.AUTHOR_NAME}
        width="168"
        height="168"
        loading="lazy"
      />
    </div>
  </div>
</section>
